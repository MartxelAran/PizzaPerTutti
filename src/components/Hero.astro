---
const { headline = "Autentica pizza italiana. Para llevar o a domicilio." } =
  Astro.props;
const base = import.meta.env.BASE_URL;
---

<section
  id="inicio"
  class="relative overflow-hidden bg-[#241b1b] text-[#f8e5c0]"
>
  <div
    class="absolute inset-0 bg-gradient-to-br from-[#2b1f1f] via-[#2f2222] to-[#1f1717]"
  >
  </div>
  <div
    class="absolute -top-24 -left-24 h-64 w-64 rounded-full bg-[#3a2422] blur-3xl opacity-40"
  >
  </div>
  <div
    class="absolute -bottom-32 -right-24 h-72 w-72 rounded-full bg-[#3a2422] blur-3xl opacity-40"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10 py-16 md:py-20">
    <div class="flex flex-col-reverse lg:flex-row items-center gap-12">
      <div class="w-full lg:w-1/2">
        <div
          class="inline-flex items-center gap-2 rounded-full bg-[#c0392b] text-[#f8e5c0] px-4 py-2 text-sm font-semibold shadow-md mb-6"
        >
          <span class="inline-block h-2 w-2 rounded-full bg-[#f8e5c0]"></span>
          <span>943 79 75 26</span>
        </div>

        <h2
          class="text-5xl md:text-7xl font-extrabold tracking-wide text-[#c0392b]"
        >
          PIZZA
        </h2>
        <h3
          class="text-4xl md:text-6xl font-extrabold tracking-wide text-[#f8e5c0]"
        >
          PER TUTTI
        </h3>

        <div class="flex items-center gap-2 mt-4">
          <span class="h-2 w-16 bg-[#2e7d32] rounded-full"></span>
          <span class="h-2 w-16 bg-[#f8e5c0] rounded-full"></span>
          <span class="h-2 w-16 bg-[#c0392b] rounded-full"></span>
        </div>

        <p class="mt-6 text-3xl md:text-4xl font-[Lobster] text-[#f8e5c0]">
          Autentico sabor italiano
        </p>

        <p class="mt-4 text-lg text-[#e5d3b0] max-w-xl">
          {headline}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 mt-8">
          <a
            href={`${base}carta`}
            class="inline-flex items-center justify-center gap-2 bg-[#c0392b] text-[#f8e5c0] px-7 py-3 rounded-full font-semibold text-lg shadow-lg hover:bg-[#a93226] transition-colors"
          >
            Ver Carta
          </a>
          <a
            href="tel:+34943797526"
            class="inline-flex items-center justify-center gap-2 bg-[#f8e5c0] text-[#241b1b] px-7 py-3 rounded-full font-semibold text-lg shadow-lg hover:bg-[#efe1c5] transition-colors"
          >
            Hacer Pedido
          </a>
        </div>
      </div>

      <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="relative">
          <div
            class="absolute inset-0 rounded-full bg-[#c0392b] blur-2xl opacity-30"
          >
          </div>
          <img
            src={`${base}images/logo.png`}
            alt="Pizza Per Tutti"
            class="relative w-72 h-72 md:w-96 md:h-96 object-contain drop-shadow-2xl"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>

  <div class="relative z-10 bg-[#c0392b]">
    <div class="container mx-auto px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div
          class="rounded-2xl bg-[#241b1b] text-[#f8e5c0] p-6 text-center shadow-lg"
        >
          <div class="text-3xl mb-2">Masa Artesanal</div>
          <div class="text-sm text-[#e5d3b0]">Fermentaci칩n lenta</div>
        </div>
        <div
          class="rounded-2xl bg-[#241b1b] text-[#f8e5c0] p-6 text-center shadow-lg"
        >
          <div class="text-3xl mb-2">Horno de Le침a</div>
          <div class="text-sm text-[#e5d3b0]">Cocci칩n perfecta</div>
        </div>
        <div
          class="rounded-2xl bg-[#241b1b] text-[#f8e5c0] p-6 text-center shadow-lg"
        >
          <div class="text-3xl mb-2">A Domicilio</div>
          <div class="text-sm text-[#e5d3b0]">Entrega r치pida</div>
        </div>
      </div>
    </div>
  </div>
</section>
